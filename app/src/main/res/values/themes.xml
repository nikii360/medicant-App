<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MedCare" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#8CD13D</item>
        <item name="colorSecondaryVariant">@color/dark_orange</item>
        <item name="colorOnSecondary">#444B73</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondary</item>
        <item name="android:actionBarTheme" >?attr/colorOnSecondary</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Login" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#F50057</item>
        <item name="colorSecondaryVariant">@color/dark_orange</item>
        <item name="colorOnSecondary">#444B73</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondary</item>
        <item name="android:actionBarTheme" >?attr/colorOnSecondary</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="RadioButtonTheme" >
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="CalenderStyle" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">@color/purple</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="prefixStyle" parent="@style/TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>

    </style>

</resources>