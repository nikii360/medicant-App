<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bookingHistory"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fam001">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/activeLayout"

                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="ACTIVE"
                        android:textColor="#51AC04"
                        android:textSize="27sp"
                        android:textStyle="bold"/>

                    <ImageButton
                        android:id="@+id/active_expandMoreBtn"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/expand_btn"
                        app:srcCompat="@drawable/ic_expand_btn_opt" />
                    <ImageButton
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/expand_less"
                        android:src="@drawable/ic_expand_less_opt"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/active_expandMoreBtn"
                        android:id="@+id/active_expandLessBtn"/>
                </RelativeLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/active_bookingList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/activeLayout"
                android:id="@+id/waitlistLayout"
                android:layout_marginTop="15dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="WAIT LISTED"
                        android:textColor="@color/purple_700"
                        android:textSize="27sp"
                        android:textStyle="bold"/>
                    <ImageButton
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/expand_btn"
                        app:srcCompat="@drawable/ic_expand_btn_opt"
                        android:id="@+id/waitlist_expandMoreBtn"
                        android:layout_alignParentEnd="true"/>
                    <ImageButton
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/expand_less"
                        android:src="@drawable/ic_expand_less_opt"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/waitlist_expandMoreBtn"
                        android:id="@+id/waitlist_expandLessBtn"/>
                </RelativeLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/waitlisted_bookingList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    />

                <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/waitlistLayout"
                android:layout_marginTop="15dp"

                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="CANCELLED"
                        android:textColor="#FF1744"
                        android:textSize="27sp"
                        android:textStyle="bold"/>
                    <ImageButton
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/expand_btn"
                        app:srcCompat="@drawable/ic_expand_btn_opt"
                        android:id="@+id/cancelled_expandMoreBtn"
                        android:layout_alignParentEnd="true"/>
                    <ImageButton
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/expand_less"
                        android:src="@drawable/ic_expand_less_opt"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/cancelled_expandMoreBtn"
                        android:id="@+id/cancelled_expandLessBtn"/>
                </RelativeLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/cancelled_bookingList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    />
            </LinearLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fam001"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/custom_banner5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:fontFamily="@font/abel"
        android:lineSpacingExtra="8sp"
        android:text="Booking\nHistory"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        android:textStyle="bold"
       android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="99dp"
        android:layout_height="128dp"
        android:layout_centerInParent="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        app:srcCompat="@drawable/agenda" />
    </RelativeLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigatorView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        app:itemIconTint="@drawable/home_nav_design"
        app:itemTextColor="@drawable/home_nav_design"
        android:layout_alignParentBottom="true"


        app:menu="@menu/menu" />


</RelativeLayout>